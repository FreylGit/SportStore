@using SportStore.Models.ViewModels
@model CartViewModel
@{

}
<h2>Корзина</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
        <th>Количество</th>
        <th>Элемент</th>
        <th class="text-right">Цена</th>
        <th class="text-right">Промежуточный итог</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var line in Model.Cart.Lines){
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">@((line.Quantity * line.Product.Price).ToString("c"))</td>
                <td>

                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="ProductId"
                           value="@line.Product.ProductId" />
                        <input type="hidden" name="returnUrl"
                           value="@Model.ReturnResult" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
          
        }
        
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Конечная стоимость:</td>
            <td class="text-right">@Model.Cart.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnResult">Вернуться к покупкам</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">Оплатить</a>
</div>
